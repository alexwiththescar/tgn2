<header class="navbar navbar-fixed-top navbar">
  <div class="navbar-inner">

    <div class="container">
      <%= link_to "The Growers Network", root_path, id: "logo" %>
          <form class="navbar-search pull-left">
    <input type="text" class="search-query" placeholder="Search">
    </form>
      <nav>

        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Fresh Products", products_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Visit Farms", users_path %></li>
            <li><%= link_to "About", help_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                My Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "My Profile", current_user %></li>
                <% if current_user.seller? %>
                <li><%= link_to "Sell Produce", sell_path(current_user) %></li>
                <% else %><% end %>
                <li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
          
        </ul>
      </nav>
    </div>
  </div>
</header>